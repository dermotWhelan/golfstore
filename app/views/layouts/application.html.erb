<!DOCTYPE html>
<html>
  <head>
    <title><%= yield(:title) %> | GolfStore</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <%= render 'layouts/header'%>
    <div id='container'>
      <div id='content'>
        <p class="notice"><%= flash[:notice] %></p>
    <%= yield %>
    </div>
    <div id='first column'>
      <div class="loginbox">
        <h2 class="BoxHeader">Login Here...</h2>
      </div>
    <div id='searchbox'>
      <h2 class"BoxHeader">Search Catalog</h2>
    </div>
  <%=render 'layouts/footer'%>  
  </body>
</html>
